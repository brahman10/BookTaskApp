<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FIndFalcon" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/wash_me</item>
        <item name="colorPrimaryDark">@color/wash_me</item>
        <item name="android:statusBarColor">@color/rhino</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.FIndFalcon" parent="Base.Theme.FIndFalcon" />

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textColor">@color/rhino</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/grey_stroke_rounded</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="SpinnerStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>